                        @Html.EditorFor(model => model.EmergencyTel, new { htmlAttributes = new { @class = "form-control nomax-width", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Biography, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Biography, new { @class = "form-control nomax-width", disabled = "disabled", style = "height: 200px;" })
                    </div>
                </div>
