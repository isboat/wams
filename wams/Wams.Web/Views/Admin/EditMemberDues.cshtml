@model Wams.ViewModels.MemberDues.EditMemberDuesRequest

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Dues for @Model.MemberFullName</h4>
        <hr />
        <div>
            @Html.HiddenFor(model => model.DuesId)
            @Html.HiddenFor(model => model.MemberId)
            @Html.HiddenFor(model => model.AddedBy)
            @Html.HiddenFor(model => model.AddedById)
            @Html.HiddenFor(model => model.AddedDate)
            @Html.HiddenFor(model => model.MemberFullName)

        </div>
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueMonth, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DueMonth, Model.DueMonthOptions, "Select one", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DueMonth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DueYear, Model.DueYearOptions, "Select one", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DueYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>    
    @Html.ActionLink("Back to member's profile", "UserDetails", "Admin", new { id = Model.MemberId }, null)
</div>
