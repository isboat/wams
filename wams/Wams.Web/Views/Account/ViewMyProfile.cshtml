                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control nomax-width", disabled = "disabled" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EmergencyTel, htmlAttributes: new { @class = "control-label col-md-2" })
