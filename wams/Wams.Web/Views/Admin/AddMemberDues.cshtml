@model Wams.ViewModels.MemberDues.AddMemberDuesRequest

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.MemberId)
    @Html.HiddenFor(model => model.AddedBy)
    @Html.HiddenFor(model => model.AddedById)
    @Html.HiddenFor(model => model.AddedDate)
    @Html.HiddenFor(model => model.MemberFullName)
    
    <div class="form-horizontal">
        <h4>Add Dues for @Model.MemberFullName</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.DueMonth, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DueMonth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DueMonth, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.DueMonth, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DueMonth, Model.DueMonthOptions, "Select one", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DueMonth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueYear, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DueYear, Model.DueYearOptions, "Select one", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DueYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Dues" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to member's profile", "Index")
</div>
